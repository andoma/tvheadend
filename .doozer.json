{
  "targets": {
    "trusty-amd64": {
      "buildenv": "trusty-amd64",
      "builddeps": [
        "cmake",
        "git",
        "build-essential",
        "pkg-config",
        "gettext",
        "libavahi-client-dev",
        "libssl-dev",
        "zlib1g-dev",
        "wget",
        "bzip2",
        "git-core",
        "liburiparser-dev",
        "libpcre3-dev",
        "python",
        "dvb-apps",
        "debhelper",
        "ccache",
        "libx11-xcb-dev"
      ],
      "buildcmd": [
        "AUTOBUILD_CONFIGURE_EXTRA=--enable-ccache\\ --enable-ffmpeg_static\\ --enable-hdhomerun_static ./Autobuild.sh -t ${TARGET} -j ${PARALLEL} -w ${WORKDIR}",
        "support/bintray.py publish filelist.txt"
      ]
    }
  }
}
